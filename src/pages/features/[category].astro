---
import { getCollection } from 'astro:content';
import '../../styles/global.css';
import { featuresRegistry, featureSetSchema } from '../../agents/featureSetSchema';
import Head from '../../components/Head.astro';

export async function getStaticPaths() {
  const features = await getCollection('features');
  return features.map((entry) => ({
    params: { category: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Get category color from feature schema meta
const categoryKey = entry.data.categoryKey as keyof typeof featureSetSchema.shape;
const categorySchema = featureSetSchema.shape[categoryKey];
const categoryMeta = categorySchema ? featuresRegistry.get(categorySchema) : null;
const mainColor = categoryMeta?.mainColor || '#3b82f6';
---

<html lang="en">
  <head>
    <Head 
      title={`${entry.data.title} Features - Pick Your Agent`}
      description={entry.data.description}
    />
  </head>
  <body>
    <nav class="navbar">
      <a href="/" class="logo">pickyouragent.dev</a>
      <div class="nav-links">
        <a href="/about">About</a>
        <a href="/docs">Docs</a>
      </div>
    </nav>

    <main class="feature-page">
      <a href="/" class="back-link">‚Üê Back to comparison</a>
      
      <article class="feature-content" style={`--main-feature-color: ${mainColor}`}>
        <Content />
      </article>
    </main>
  </body>
</html>

